  "version": "0.2.0",
  "configurations": [
    {
      "name": "dev",
      "type": "dart",
      "request": "launch",
      "program": "lib/main_dev.dart",
      "args": [
        "--dart-define-from-file",
        "${workspaceFolder}/.env.dev"
      ],
      "flutterMode": "debug",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "flashcard (profile mode)",
      "type": "dart",
      "request": "launch",
      "program": "lib/main_prod.dart",
      "flutterMode": "profile"
    },
    {
      "name": "flashcard (release mode)",
      "request": "launch",
      "type": "dart",
      "flutterMode": "release"
    }
  ]
}